<UserControl x:Class="Excalibur.Views.TaskManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Excalibur.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="14">
        <Border x:Name="Panel"/>
        <TextBlock x:Name="Notice" Text="TaskManager is not supported float mode, please dock it." FontSize="24" TextWrapping="WrapWithOverflow"/>
    </Grid>
</UserControl>
